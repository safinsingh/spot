{
	"name": "eslint-config-spot",
	"version": "0.1.0",
	"description": "monorepo-wide linting configuration for spot",
	"main": "dist/index.js",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"fmt": "prettier --write 'src/**/*.{js,ts,tsx,yml,scss,json}'",
		"fmt:ci": "prettier --check 'src/**/*.{js,ts,tsx,yml,scss,json}'",
		"lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
		"lint:ci": "eslint 'src/**/*.{js,ts,tsx}' --quiet",
		"build": "rm -rf dist/* && tsc"
	},
	"keywords": [
		"eslint"
	],
	"author": "Safin Singh",
	"license": "AGPL-3.0",
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^4.11.0",
		"@typescript-eslint/parser": "^4.11.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-import-resolver-typescript": "^2.3.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-prettier": "^3.3.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"js-yaml": "^3.14.1",
		"prettier": "^2.2.1"
	},
	"peerDependencies": {
		"eslint": "^7.16.0"
	},
	"devDependencies": {
		"@types/js-yaml": "3.12.5",
		"@types/node": "14.14.16",
		"typescript": "4.1.3",
		"eslint": "7.19.0"
	}
}
