{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "esnext"],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true
	},
	"compileOnSave": true,
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
